    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="GlassButton.xaml"/>
                <ResourceDictionary Source="SmoothSlider.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="Transparent">
        <Vlc:VlcControl xmlns:Vlc="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf" x:Name="VlcControl" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0.334,0.333" />

        <Image x:Name="imgPlay" Source="images/play1.png" Visibility="Hidden"/>
        <Image x:Name="imgPause" Source="images/pause1.png" Visibility="Hidden"/>
        <Image x:Name="imgFullScreen" Source="images/full-screen.png" Visibility="Hidden"/>
        <Image x:Name="imgExitFullScreen" Source="images/exit-full-screen.png" Visibility="Hidden"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <DockPanel Background="Transparent" Name="externalPanel" Height="70" MouseEnter="enterControlArea" MouseLeave="leaveControlArea" Grid.Row="1" VerticalAlignment="Bottom">
                <DockPanel Opacity=".7" Background="Black" Height="70"  Name="controlPanel" VerticalAlignment="Center">
                    <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.8*"/>
                                <ColumnDefinition Width="0.6*"/>
                                <ColumnDefinition Width="7*"/>
                                <ColumnDefinition Width="0.8*"/>
                            </Grid.ColumnDefinitions>

                            <Button Style="{StaticResource GlassButton}" Width="60" Height="60" Background="#FFEB2B17" Command="MediaCommands.Play" Name="playBtn" Grid.Column="0" HorizontalAlignment="Right">
                                <Image Source="images/play1.png" Name="imgPlayPause" />
                            </Button>


                            <Label Name="lblCurrentTime" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#FFF7F4F4">00:00:00</Label>

                            <Slider Style="{StaticResource Horizontal_Slider}" VerticalAlignment="Center" Minimum="0" Maximum="100" Value="0" Orientation="Horizontal" Height="10" Grid.Column="2" Name="pgb" Thumb.DragCompleted="pgb_DragCompleted" Thumb.DragStarted="pgb_DragStarted"></Slider>

                            <Label Name="lblMaxTime" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#FFF7F4F4" Margin="2">00:00:00</Label>

                        <Button Style="{StaticResource full_screen}" Width="20" Height="20" Grid.Column="3" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10,5" Click="btnFullScreen_Click"  Name="btnFullScreen" ToolTip="View full screen">
                                <Image Source="images/full-screen.png" Name="btnImgFullScreen"/>
                            </Button>
                        </Grid>
                

                <!--<Button Style="{StaticResource GlassButton}" Width="70" Height="70" Background="red" Margin="10" Command="MediaCommands.Pause" Name="pauseBtn" Visibility="Hidden">
                    <Image Source="images/pause1.png" Name="imgPause" />
                </Button>-->
                <!--<Button Style="{StaticResource GlassButton}" Width="70" Height="70" Background="White" Margin="10" Command="MediaCommands.Stop">
                    <Image Source="images/stop.png" />
                </Button>-->                
            </DockPanel>
        </DockPanel>
        </Grid>
    </Grid>


</Window>
