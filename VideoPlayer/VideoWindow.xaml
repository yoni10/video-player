        mc:Ignorable="d" 
        Title="" 
        ScrollViewer.HorizontalScrollBarVisibility="Disabled"   
        WindowStyle="SingleBorderWindow"
        Background="Transparent"
        MouseMove="Window_MouseMove"
        ScrollViewer.CanContentScroll="False" Foreground="#FFF8F0F0"  >
